{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cargo run",
      "type": "shell",
      "command": "cargo run",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "cargo build",
      "type": "shell",
      "command": "cargo build"
    },
    {
      "label": "cargo run (current crate)",
      "type": "shell",
      "command": "cargo",
      "args": ["run"],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": "$rustc"
    }
  ]
}
